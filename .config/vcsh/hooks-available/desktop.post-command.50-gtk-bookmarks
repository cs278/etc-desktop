#!/bin/sh

trap 'rm -f "$out";' EXIT

root="$(git rev-parse --show-toplevel)"
out=$(mktemp)
src="$root/.gtk-bookmarks.d/"
dst="$root/.gtk-bookmarks"

add()
{
	if [ -f "$src/$1" ];
	then
		cat "$src/$1" >> "$out"
	fi
}

for network in `network-location`;
do
	add $network
done

add $(hostname)
add default

# Expand $HOME
sed -i "s,\$HOME,$HOME,g" "$out"

# Remove comments
sed -i "/^#/d" "$out"

# Remove empty lines
sed -i "/^$/d" "$out"

mv "$out" "$dst"
