begin
 prog = irexec
 button = Power
 config = xset dpms force off
end

begin
 prog = irexec
 button = Play
 config = dcop amarok player play
end

begin
 prog = irexec
 button = Stop
 config = dcop amarok player stop
end

begin
 prog = irexec
 button = Pause
 config = dcop amarok player playPause
end

begin
 prog = irexec
 button = voldown
 repeat = 2
 config = dcop amarok player volumeDown 
end

begin
 prog = irexec
 button = volup
 repeat = 2
 config = dcop amarok player volumeUp
end

begin
 prog = irexec
 button = Forward
 repeat = 3
 config = dcop amarok player seekRelative 5
end

begin
 prog = irexec
 button = Rewind 
 repeat = 3
 config = dcop amarok player seekRelative -5
end

begin
 prog = irexec
 button = Blank
 config = dcop amarok playlist clearPlaylist
end

begin
 prog = irexec
 button = Mute
 config = dcop amarok player mute
end

begin
 prog = irexec
 button = Skip
 repeat = 3
 config = dcop amarok player next
end

begin
 prog = irexec
 button = Replay
 repeat = 3
 config = dcop amarok player prev
end

begin
 prog = irexec
 button = Full
 repeat = 3
 config = dcop amarok player showOSD
end

begin
	prog = irexec
	button = home
	config = prev_volume=`dcop amarok player getVolume`; dcop amarok player setVolume `expr $prev_volume / 3`; (dcop amarok player artist; echo '  '; dcop amarok player title) | text2wave -F 44100 -scale 3 | mplayer -cache 8192 -ao pulse -vo null -noconsolecontrols -; dcop amarok player setVolume $prev_volume
end
